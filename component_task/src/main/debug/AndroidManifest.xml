<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.winsion.component.task">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="debug.TaskApplication"
        android:allowBackup="true"
        android:icon="@mipmap/basic_ic_launcher"
        android:label="@string/task_app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/BasicAppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.addnote.AddNoteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.issue.IssueActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.issue.SelectTeamActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.issue.SelectTrainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.taskoperator.OperatorTaskDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.winsion.component.task.activity.patrolitem.PatrolItemActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.winsion.component.task.activity.submitproblem.SubmitProblemActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.winsion.component.task.activity.GridActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
    </application>
</manifest>
