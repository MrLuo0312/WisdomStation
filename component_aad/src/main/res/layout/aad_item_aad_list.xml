<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/basic_div_vertical"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/basic_d35"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/basic_bg_round_rect_white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/basic_d26"
                    android:paddingRight="@dimen/basic_d26"
                    android:textColor="@color/basic_black6"
                    android:textSize="@dimen/basic_s24"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap"
                    tools:text="D924" />

                <ImageView
                    android:id="@+id/iv_is_shortcut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@null"
                    android:src="@drawable/aad_ic_shortcut" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/basic_d14"
                    android:paddingLeft="@dimen/basic_d15"
                    android:paddingRight="@dimen/basic_d15"
                    android:paddingTop="@dimen/basic_d13">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_startStationName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_blue1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="珠海" />

                        <TextView
                            android:id="@+id/tv_train_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/basic_d12"
                            android:layout_marginTop="@dimen/basic_d12"
                            android:textColor="@color/basic_white1"
                            android:textSize="@dimen/basic_s16"
                            tools:text="正在检票" />

                        <TextView
                            android:id="@+id/tv_endStationName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_blue1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="北京西" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/basic_d14"
                            android:layout_marginTop="@dimen/basic_d16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_track"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/basic_white1"
                                android:textSize="@dimen/basic_s21"
                                tools:text="3出站口" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/basic_d23"
                            android:layout_height="@dimen/basic_d23"
                            android:src="@drawable/aad_ic_arrive"
                            tools:ignore="ContentDescription" />

                        <View
                            android:layout_width="@dimen/basic_d1"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/basic_d23"
                            android:layout_height="@dimen/basic_d23"
                            android:layout_marginBottom="@dimen/basic_d33"
                            android:src="@drawable/aad_ic_go"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_platform"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/basic_white1"
                                android:textSize="@dimen/basic_s21"
                                tools:text="3站台" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_plan_arrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_white1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="03:20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/basic_d12"
                            android:layout_marginTop="@dimen/basic_d12"
                            android:text="@string/value_plan"
                            android:textColor="@color/basic_gray2"
                            android:textSize="@dimen/basic_s16" />

                        <TextView
                            android:id="@+id/tv_plan_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_white1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="03:38" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/basic_d14"
                            android:layout_marginTop="@dimen/basic_d16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_wait_room"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/basic_white1"
                                android:textSize="@dimen/basic_s21"
                                tools:text="候车区" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_real_arrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_blue1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="03:20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/basic_d12"
                            android:layout_marginTop="@dimen/basic_d12"
                            android:text="@string/value_real"
                            android:textColor="@color/basic_gray2"
                            android:textSize="@dimen/basic_s16" />

                        <TextView
                            android:id="@+id/tv_real_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/basic_blue1"
                            android:textSize="@dimen/basic_s21"
                            tools:text="03:38" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="@dimen/basic_d14"
                            android:layout_marginTop="@dimen/basic_d16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_check_port"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/basic_white1"
                                android:textSize="@dimen/basic_s21"
                                tools:text="B3,A3" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/basic_d1"
                    android:layout_marginTop="@dimen/basic_d130"
                    android:background="@color/basic_black1"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/basic_div_vertical"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/basic_div_horizontal"
        tools:ignore="ContentDescription" />
</LinearLayout>