<resources>

    <style name="SplashTheme" parent="BasicAppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomTabBarStyle">
        <item name="android:padding">@dimen/basic_d3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="textColorNormal">@color/basic_gray1</item>
        <item name="textColorSelected">@color/basic_white1</item>
    </style>
</resources>
