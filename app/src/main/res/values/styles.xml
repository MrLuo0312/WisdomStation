<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black1</item>
        <item name="colorPrimaryDark">@color/black3</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="android:windowBackground">@color/black1</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent
        </item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="popupWindowAnimStyle">
        <item name="android:windowEnterAnimation">@anim/popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_window_exit</item>
    </style>

    <style name="TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomTabBarStyle">
        <item name="android:padding">@dimen/d3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="textColorNormal">@color/gray1</item>
        <item name="textColorSelected">@color/white1</item>
    </style>

    <!-- Indicator中的RadioButton -->
    <style name="RadioButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/d85</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/selector_indicator_text</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/s14</item>
    </style>

    <style name="IndicatorStyle">
        <item name="android:layout_height">@dimen/d48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black3</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/d9</item>
    </style>

    <!-- TextView跑马灯效果，需要对该TexView设置isSelect(true) -->
    <style name="MarqueeTextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
</resources>
