<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_unfinished"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/unDone"
            android:textColor="@color/selector_button_text"
            android:textSize="@dimen/s16" />

        <RadioButton
            android:id="@+id/btn_finished"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/selector_button_text"
            android:textSize="@dimen/s16" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_reminders_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        tools:listitem="@layout/item_todo" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48"
        android:layout_margin="@dimen/d15"
        android:background="@drawable/btn_yellow"
        android:text="@string/add"
        android:textColor="@color/black6"
        android:textSize="@dimen/s21" />
</LinearLayout>