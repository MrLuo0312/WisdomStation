<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.winsion.dispatch.view.TitleView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/title_btn_note" />

    <EditText
        android:id="@+id/et_note_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d300"
        android:layout_below="@id/tv_title"
        android:background="@color/gray8"
        android:gravity="start|top"
        android:hint="@string/name_note_content"
        android:maxLength="150"
        android:paddingBottom="@dimen/d40"
        android:paddingEnd="@dimen/d10"
        android:paddingStart="@dimen/d10"
        android:paddingTop="@dimen/d10"
        android:textColor="@color/white1"
        android:textColorHint="@color/gray2"
        android:textSize="@dimen/s20" />

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/et_note_content"
        android:layout_alignEnd="@id/et_note_content"
        android:layout_margin="@dimen/d10"
        android:text="@string/default_counter"
        android:textColor="@color/gray1"
        android:textSize="@dimen/s16" />
</RelativeLayout>