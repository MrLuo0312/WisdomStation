<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.winsion.component.basic.view.MyIndicator
        android:id="@+id/mi_container"
        style="@style/IndicatorStyle">

        <com.winsion.component.basic.view.BadgeRadioButton
            android:id="@+id/brb0"
            style="@style/RadioButtonStyle"
            android:background="@drawable/selector_indicator_bg_left" />

        <com.winsion.component.basic.view.BadgeRadioButton
            android:id="@+id/brb1"
            style="@style/RadioButtonStyle"
            android:background="@drawable/selector_indicator_bg_middle" />

        <com.winsion.component.basic.view.BadgeRadioButton
            android:id="@+id/brb2"
            style="@style/RadioButtonStyle"
            android:background="@drawable/selector_indicator_bg_right" />
    </com.winsion.component.basic.view.MyIndicator>

    <com.winsion.component.basic.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mi_container" />
</RelativeLayout>
