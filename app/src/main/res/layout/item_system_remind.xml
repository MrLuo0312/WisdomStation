<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/div_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15">

                <ImageView
                    android:id="@+id/iv_red_dot"
                    android:layout_width="@dimen/d8"
                    android:layout_height="@dimen/d8"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/d5"
                    android:gravity="center"
                    android:src="@drawable/bg_circle_red" />

                <TextView
                    android:id="@+id/tv_remind_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_red_dot"
                    tools:text="[提醒分类]"
                    android:textColor="@color/blue1"
                    android:textSize="@dimen/s21" />

                <TextView
                    android:id="@+id/tv_remind_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    tools:text="[日期时间]"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/s16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:layout_marginStart="@dimen/d15"
                android:background="@color/gray2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_remind_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/d32"
                    android:padding="@dimen/d15"
                    android:textColor="@color/white1"
                    android:textSize="@dimen/s21"
                    tools:text="[提醒内容]" />

                <ImageView
                    android:id="@+id/iv_select"
                    android:layout_width="@dimen/d54"
                    android:layout_height="@dimen/d54"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/d15"
                    android:src="@drawable/ic_check_box_outline"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="@dimen/d54"
                    android:layout_height="@dimen/d54"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/d15"
                    android:src="@drawable/ic_delete1" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/div_vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_horizontal" />
</LinearLayout>
