<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_horizontal"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/div_vertical"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/basic_gray8"
            android:orientation="vertical"
            android:paddingBottom="@dimen/basic_d9"
            android:paddingEnd="@dimen/basic_d13"
            android:paddingStart="@dimen/basic_d13"
            android:paddingTop="@dimen/basic_d9">

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:columnCount="6"
                app:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_device_name"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    app:layout_columnSpan="5" />

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="@string/name_submit_time"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    app:layout_columnSpan="5" />

                <TextView
                    android:id="@+id/tv_commit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:singleLine="true"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="地"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="点："
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="3"
                    app:layout_columnSpan="2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:singleLine="true"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16"
                    app:layout_columnSpan="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="等"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    app:layout_columnSpan="1"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="级："
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="3"
                    app:layout_columnSpan="2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="子"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    app:layout_columnSpan="1"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="类："
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="3"
                    app:layout_columnSpan="2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_subclass_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="描"
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="0"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:text="述："
                    android:textColor="@color/basic_gray2"
                    android:textSize="@dimen/basic_s15"
                    app:layout_column="3"
                    app:layout_columnSpan="2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/basic_d8"
                    android:textColor="@color/basic_white1"
                    android:textSize="@dimen/basic_s16" />
            </android.support.v7.widget.GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/basic_d8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/basic_yellow2"
                    android:textSize="@dimen/basic_s20" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_not_pass"
                    android:layout_width="@dimen/basic_d88"
                    android:layout_height="@dimen/basic_d38"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/btn_yellow"
                    android:text="@string/btn_not_pass"
                    android:textSize="@dimen/basic_s20" />

                <Button
                    android:id="@+id/btn_pass"
                    android:layout_width="@dimen/basic_d88"
                    android:layout_height="@dimen/basic_d38"
                    android:background="@drawable/btn_yellow"
                    android:text="@string/btn_pass"
                    android:textSize="@dimen/basic_s20" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/div_vertical"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_horizontal"
        tools:ignore="ContentDescription" />
</LinearLayout>