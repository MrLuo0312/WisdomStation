<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_spinner"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d40"
    android:background="@color/gray10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_container_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/iv_text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selector_spinner_text"
            android:textSize="@dimen/s16" />

        <ImageView
            android:id="@+id/iv_arrow_first"
            android:layout_width="@dimen/d14"
            android:layout_height="@dimen/d14"
            android:layout_marginStart="@dimen/d6"
            android:src="@drawable/ic_arrow_down_little"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:id="@+id/div_first"
        android:layout_width="@dimen/d1"
        android:layout_height="@dimen/d15"
        android:background="@color/black1" />

    <LinearLayout
        android:id="@+id/ll_container_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/iv_text_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selector_spinner_text"
            android:textSize="@dimen/s16" />

        <ImageView
            android:id="@+id/iv_arrow_second"
            android:layout_width="@dimen/d14"
            android:layout_height="@dimen/d14"
            android:layout_marginStart="@dimen/d6"
            android:src="@drawable/ic_arrow_down_little"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:id="@+id/div_second"
        android:layout_width="@dimen/d1"
        android:layout_height="@dimen/d15"
        android:background="@color/black1" />

    <include
        layout="@layout/view_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>