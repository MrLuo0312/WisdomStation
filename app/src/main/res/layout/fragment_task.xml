<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 选择框 -->
    <com.winsion.wisdomstation.view.SpinnerView
        android:id="@+id/sv_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sv_spinner">

        <include layout="@layout/layout_status" />

        <TextView
            android:id="@+id/train_number_index"
            android:layout_width="@dimen/d130"
            android:layout_height="@dimen/d130"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d20"
            android:background="@drawable/bg_circle_blue"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textSize="@dimen/s32"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sv_spinner"
        android:background="@color/black2"
        android:visibility="gone" />
</RelativeLayout>